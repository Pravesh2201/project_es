# =================== System: Kibana Server ===================
server.port: 5601
server.host: "0.0.0.0"

# Base Path for Kibana
server.basePath: "/kibana"
server.rewriteBasePath: true

# Public URL for accessing Kibana
server.publicBaseUrl: "http://{{ elasticsearchIp }}/kibana"  # Replace with your actual domain or IP

# =================== System: Elasticsearch ===================
# Elasticsearch instance URL
elasticsearch.hosts: ["http://{{ elasticsearchIp }}:9200"]  # Make sure this is correct

# Uncomment and configure if using Elasticsearch with basic authentication
# elasticsearch.username: "kibana_system"
# elasticsearch.password: "your_password"

# =================== System: Logging ===================
logging:
  appenders:
    file:
      type: file
      fileName: /var/log/kibana/kibana.log
      layout:
        type: json
  root:
    appenders:
      - default
      - file

# =================== SSL (Optional) ===================
# Uncomment if SSL is enabled for Kibana
# server.ssl.enabled: true
# server.ssl.certificate: /path/to/your/server.crt
# server.ssl.key: /path/to/your/server.key

# =================== Saved Objects: Migrations ===================
# Uncomment and adjust if facing migration issues
# migrations.batchSize: 1000
# migrations.maxBatchSizeBytes: 100mb
