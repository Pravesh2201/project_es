
server {

    listen 80;
    server_name {{ hostvars[inventory_hostname]['ansible_host'] }};  # Replace with your actual public IP or domain

    # Proxy for Kibana (port 5601)

    location /kibana/ {

        proxy_pass http://{{ hostvars['elasticsearch']['ansible_host'] }}:5601;

        proxy_set_header Host $host;

        proxy_set_header X-Real-IP $remote_addr;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support for Kibana

        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;

        proxy_set_header Connection "upgrade";

        # Optional timeout and buffer settings

        proxy_connect_timeout 60s;

        proxy_send_timeout 60s;

        proxy_read_timeout 60s;

        proxy_buffering off;

    }

    # Proxy for Elasticsearch (port 9200)

    location /elasticsearch/ {

        proxy_pass http://{{ hostvars['elasticsearch']['ansible_host'] }}:9200/;

        proxy_set_header Host $host;

        proxy_set_header X-Real-IP $remote_addr;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_set_header X-Forwarded-Proto $scheme;

        # Optional timeout and buffer settings

        proxy_connect_timeout 60s;

        proxy_send_timeout 60s;

        proxy_read_timeout 60s;

        proxy_buffering off;

    }

}
